<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inspire.ariel.inspire">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="inspire.ariel.inspire.permission.C2D_MESSAGE" />

    <permission
        android:name="inspire.ariel.inspire.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:name=".common.app.InspireApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".common.quoteslist.view.QuotesListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".owner.quotecreator.view.quotescreatoractivity.QuotesCreatorActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />

        <service
            android:name=".common.quoteslist.services.PushNotificationService"
            android:exported="false" />

        <receiver
            android:name=".common.quoteslist.broadcastrecievers.PushNotificationReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="inspire.ariel.inspire" />
            </intent-filter>
        </receiver>

        <activity android:name=".common.singlequote.SingleQuoteActivity"></activity>
    </application>

</manifest>