<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="inspire.ariel.inspire.common.loginactivity.view.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/single_tv_vh_text_size"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="@dimen/login_title_top_margin"
            />

        <ImageButton
            android:id="@+id/fbBackendlessLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/continue_with_fb_btn_height"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@drawable/continue_with_fb_btn" />

    </RelativeLayout>

</layout>
