<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
    android:id="@+id/treatLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/optionsManagerBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/triangle_btn" />

    <inspire.ariel.inspire.common.utils.viewutils.EllipsizingTextView
        android:id="@+id/treatTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_above="@id/continueReadBtn"
        android:layout_below="@id/optionsManagerBtn"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/treat_large_text_size" />

        <Button
            android:id="@+id/purchaseBtn"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@color/md_green_200"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Purchase" />

    <Button
        android:id="@+id/continueReadBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/purchaseBtn"
        android:layout_toLeftOf="@id/purchaseBtn"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/md_grey_600"
        android:background="@color/md_grey_200"
        android:text="@string/continue_reading"
        android:textSize="@dimen/continue_reading_size" />

    </RelativeLayout>
</layout>
