<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/optionImgBtn"
            android:layout_width="@dimen/quote_option_img_btn_width"
            android:layout_height="@dimen/quote_option_img_btn_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/bg3" />

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/optionExpandingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/optionImgBtn"
            android:layout_marginTop="@dimen/quote_option_expandable_layout_top_margin"
            app:ael_duration="500"
            app:ael_expanded="false"
            app:ael_interpolator="fastOutLinearIn"
            app:ael_orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/optionRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transcriptMode="normal" />

  <!--          <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transcriptMode="normal" />-->

        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
    </RelativeLayout>
